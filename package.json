{
  "name": "riot-routing",
  "version": "0.0.1",
  "description": "Lightweight, declarative client sided router for Riot.js.",
  "main": "index.js",
  "scripts": {
    "lint": "npx eslint ./src/**/**.js",
    "pretty": "npx prettier-eslint --write ./src/**/**.js",
    "test": "npx jest --coverage",
    "build:component": "./scripts/build.sh",
    "build:browser": "npx webpack --config webpack.config.js",
    "build": "npm run lint && npm run pretty && npm run build:component && npm run build:browser && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neetjn/riot-routing.git"
  },
  "keywords": [
    "routing",
    "router",
    "html5",
    "history",
    "api",
    "riot",
    "javascript"
  ],
  "author": "John Nolette <john@neetgroup.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/neetjn/riot-routing/issues"
  },
  "homepage": "https://github.com/neetjn/riot-routing#readme",
  "dependencies": {
    "core-routing": "0.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@riotjs/cli": "^4.0.2",
    "@riotjs/compiler": "^4.5.2",
    "@riotjs/webpack-loader": "^4.0.1",
    "@testing-library/jest-dom": "^4.1.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "prettier-eslint": "^9.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "riot": "^4.5.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "verbose": true
  }
}
