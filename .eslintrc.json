{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "object-curly-spacing": ["error", "always"],
    "no-multiple-empty-lines": ["error", { "max": 2, "maxBOF": 1 }],
    "semi": ["error", "never"],
    "no-unused-vars": ["error"],
    "no-undef": ["error"],
    "space-before-blocks": ["error", "always"],
    "quotes": ["error", "single"],
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "prefer-template": "error",
    "no-useless-concat": "error"
  },
  "globals": {
    "require": true,
    "process": true,
    "describe": true,
    "it": true,
    "document": true,
    "window": true,
    "beforeEach": true,
    "afterEach": true,
    "expect": true,
    "Event": true
  }
}
